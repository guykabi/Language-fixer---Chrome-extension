{
    "name": "Language Fixer",
    "version": "1.0",
    "description":"Language typed fixer - English/Hebrew",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_title":"Open",
        "default_icon": "teacher4.png"
      },
      "background":{
         "service_worker":"background.js"
      },
      "permissions": [
        "scripting",
        "tabs",
        "storage",
        "activeTab" 
      ],
    "content_scripts":[
         {
          "matches":["<all_urls>"],
          "js":["contentScript.js"]
         }

      ]
  }
