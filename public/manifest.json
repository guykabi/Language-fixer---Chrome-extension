{
    "name": "Language Fixer",
    "version": "1.0",
    "description":"When language is wrong",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_title":"lalalala"
      },
      "background":{
         "service_worker":"background.js"
      },
      "permissions": [
        "scripting",
        "tabs",
        "storage",
        "activeTab" 
      ],
    "content_scripts":[
         {
          "matches":["https://*/*"],
          "js":["contentScript.js"]
         }

      ]
  }
